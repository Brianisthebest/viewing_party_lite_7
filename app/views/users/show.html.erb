<h3><%= current_user.user_name %>'s Dashboard</h3>

<%= button_to "Discover Movies", discover_index_path, method: 'get' %>

<section class='viewing-parties' style="display:flex;justify-content:space-evenly">
  <%= "click 'Discover Movies' and start a party!" if current_user.parties.empty? %>
  <% current_user.parties.each do |party| %>
    <div id='party-<%= party.id %>' style="border: 1px solid black;text-align:center;width:350px" >
      <%= render partial: 'party', locals: { party: party, user: current_user} %>
    </div>
  <% end %>
</section>
